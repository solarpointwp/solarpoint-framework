{
    "name": "solarpoint/container",
    "description": "A lightweight service container for managing class dependencies and performing dependency injection.",
    "type": "library",
    "keywords": ["solarpoint", "container", "dependency-injection"],
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Mark Hadjar",
            "email": "mark.hadjar@solarpointwp.com"
        }
    ],
    "support": {
        "issues": "https://github.com/solarpointwp/solarpoint-framework/issues",
        "source": "https://github.com/solarpointwp/solarpoint-framework"
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "SolarPoint\\Container\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SolarPoint\\Container\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit"
    }
}
